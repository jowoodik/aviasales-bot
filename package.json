{
  "name": "aviasales-telegram-bot",
  "version": "2.4.0",
  "description": "Telegram bot for monitoring flight prices",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "scheduler": "node scheduler.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "test:batch:unit": "node test/batch-optimization/01-unit-prepareBatchItem.test.js && node test/batch-optimization/02-unit-processBatchResults.test.js",
    "test:batch:integration": "node test/batch-optimization/03-integration-batch30.test.js && node test/batch-optimization/04-integration-filters.test.js",
    "test:batch": "npm run test:batch:unit && npm run test:batch:integration"
  },
  "keywords": [
    "telegram",
    "bot",
    "flight",
    "price",
    "monitor",
    "travel",
    "tickets"
  ],
  "author": "Matvei Iuferev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jowoodik/aviasales-bot.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "got": "^11.8.6",
    "https-proxy-agent": "^7.0.6",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.67.0",
    "puppeteer": "^24.35.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
