      const response = await fetch('/admin/api/check-stats');
      const stats = await response.json();

      document.getElementById('checks-loading').style.display = 'none';
      const content = document.getElementById('checks-content');
      content.style.display = 'block';

      if (stats.length === 0) {
        content.innerHTML = '<div class="empty-state"><div class="empty-state-icon">üìä</div><p>–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –æ –ø—Ä–æ–≤–µ—Ä–∫–∞—Ö</p></div>';
