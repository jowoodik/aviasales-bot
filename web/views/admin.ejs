    const alertDiv = document.getElementById('cleanup-alert');
    alertDiv.innerHTML = '<div class="alert alert-info">‚è≥ –í—ã–ø–æ–ª–Ω—è–µ—Ç—Å—è –æ—á–∏—Å—Ç–∫–∞...</div>';

    try {
      const response = await fetch('/admin/api/cleanup', {
        method: 'POST',
