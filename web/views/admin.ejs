<script>
  // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ç–∞–±–æ–≤
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

      tab.classList.add('active');
      const tabId = tab.getAttribute('data-tab');
      document.getElementById(tabId).classList.add('active');

      loadTabData(tabId);
    });
  });

  let loadedTabs = new Set(['users']);

  function loadTabData(tabId) {
    if (loadedTabs.has(tabId)) return;
    loadedTabs.add(tabId);

    switch(tabId) {
      case 'users':
        loadUsers();
        break;
      case 'routes':
        loadRoutes();
        break;
      case 'checks':
        loadCheckStats();
        break;
      case 'failed':
        loadFailedChecks();
        break;
    }
  }

  // –ó–∞–≥—Ä—É–∑–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
  async function loadUsers() {
    try {
      const response = await fetch('/admin/api/users');
      const users = await response.json();

      document.getElementById('users-loading').style.display = 'none';
      const content = document.getElementById('users-content');
      content.style.display = 'block';

      if (users.length === 0) {
        content.innerHTML = '<div class="empty-state"><div class="empty-state-icon">üì≠</div><p>–ù–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π</p></div>';
        return;
      }

      let html = '<table><thead><tr><th>Chat ID</th><th>–ú–∞—Ä—à—Ä—É—Ç—ã</th><th>–¢–∏—Ö–∏–µ —á–∞—Å—ã</th><th>–£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è</th><th>–ü–æ—Å–ª–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å</th></tr></thead><tbody>';

      users.forEach(user => {
        const quietHours = user.quiet_hours_start !== null ?
                user.quiet_hours_start + ':00 - ' + user.quiet_hours_end + ':00' : '–í—ã–∫–ª';
        const notifyOnCheck = user.notify_on_check ?
                '<span class="badge badge-success">–í–∫–ª</span>' :
                '<span class="badge badge-danger">–í—ã–∫–ª</span>';
        const lastActivity = user.last_activity ?
                new Date(user.last_activity).toLocaleString('ru-RU') :
                '–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö';

        html += '<tr><td><strong>' + user.chat_id + '</strong></td><td>' +
                (user.total_routes || 0) + '</td><td>' + quietHours + '</td><td>' +
                notifyOnCheck + '</td><td>' + lastActivity + '</td></tr>';
      });

      html += '</tbody></table>';
      content.innerHTML = html;
    } catch (error) {
      console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π:', error);
      document.getElementById('users-content').innerHTML =
              '<div class="alert alert-error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö</div>';
    }
  }

  // –ó–∞–≥—Ä—É–∑–∫–∞ –º–∞—Ä—à—Ä—É—Ç–æ–≤
  async function loadRoutes() {
    try {
      const response = await fetch('/admin/api/routes');
      const routes = await response.json();

      document.getElementById('routes-loading').style.display = 'none';
      const content = document.getElementById('routes-content');
      content.style.display = 'block';

      if (routes.length === 0) {
        content.innerHTML = '<div class="empty-state"><div class="empty-state-icon">‚úàÔ∏è</div><p>–ù–µ—Ç –º–∞—Ä—à—Ä—É—Ç–æ–≤</p></div>';
        return;
      }

      let html = '<table><thead><tr><th>ID</th><th>Chat ID</th><th>–ú–∞—Ä—à—Ä—É—Ç</th><th>–ü–æ—Ä–æ–≥</th><th>–°—Ç–∞—Ç—É—Å</th><th>–°–æ–∑–¥–∞–Ω</th></tr></thead><tbody>';

      routes.forEach(route => {
        const status = route.is_paused ?
                '<span class="badge badge-danger">–ü–∞—É–∑–∞</span>' :
                '<span class="badge badge-success">–ê–∫—Ç–∏–≤–µ–Ω</span>';
        const created = new Date(route.created_at).toLocaleString('ru-RU');

        html += '<tr><td><strong>' + route.id + '</strong></td><td>' + route.chat_id +
