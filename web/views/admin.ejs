      let html = '<table><thead><tr><th>–ú–∞—Ä—à—Ä—É—Ç</th><th>Chat ID</th><th>–ö–æ–º–±–∏–Ω–∞—Ü–∏–π</th><th>–£—Å–ø–µ—à–Ω–æ</th><th>–û—à–∏–±–∫–∏</th><th>–í—Ä–µ–º—è</th></tr></thead><tbody>';

      stats.forEach(stat => {
        const successRate = ((stat.successful_checks / stat.total_combinations) * 100).toFixed(0);
        const time = new Date(stat.check_timestamp).toLocaleString('ru-RU');

        html += '<tr><td><strong>' + stat.route_name + '</strong></td><td>' + stat.chat_id +
